<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ywxy.ca"
    android:versionCode="2"
    android:versionName="0.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <!-- 必选 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络通信 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 获取设备信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 获取MAC地址 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读写sdcard，storage等等 -->
    <!-- 可选 -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- 获取logcat日志 -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ywxy.ca.activity.SignInActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ywxy.ca.activity.GradeDescActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ywxy.ca.activity.HistoryActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ywxy.ca.activity.CetQueryActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ywxy.ca.activity.CetDescActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ywxy.ca.activity.CalendarActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ywxy.ca.activity.HomeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ywxy.ca.activity.TimetableActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ywxy.ca.activity.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreenTheme" >
        </activity>
    </application>

</manifest>